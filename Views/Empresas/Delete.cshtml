@model Databank.Models.Empresa

@{
    ViewData["Title"] = "Excluir Empresa";
}

<div class="pai-empresa text-center">
    <div class="filho">
        <h4 class="font font-weight-bolder text-center m-1">Deletar Empresa</h4>
        <hr />
        <h3 class="text-center font font-weight-bold">Você tem certeza que quer deletar isso?</h3>
        <br />
        <div>
            <dl class="col-6 offset-3  cor alert-secondary rounded p-2">
                <dt>
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="text-danger font-weight-light">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Sigla)
                </dt>
                <dd class="text-danger font-weight-light" >
                    @Html.DisplayFor(model => model.Sigla)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Ativo)
                </dt>
                <dd class="text-danger font-weight-light">
                    @{ if (Model.Ativo == false)
                        {
                            <label class="font font-weight-bolder"><i class="material-icons text-danger float-left">close</i>Desativada</label>

                        }
                        else
                        {
                            <label class="font font-weight-bolder"><i class="material-icons text-success float-left">check</i>Ativada</label>


                        }
                    }
                </dd>
            </dl>
            <div class="text-center m-2">

                <form asp-action="Delete">
                    <a asp-action="Index" class="btn btn-dark rounded-pill"><i class="material-icons float-left font">arrow_back</i>Voltar Para Lista</a>
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" value="Delete" class="btn btn-danger rounded-pill "><i class="material-icons float-left">delete</i>Apagar</button>
                </form>
            </div>
        </div>
    </div>
</div>
