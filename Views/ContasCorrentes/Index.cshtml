@model IEnumerable<ContaCorrente>

@{
    ViewData["Title"] = "Contas Correntes";
}



<div class="pai-conta">
    <div class="filho btable-hover table-secondary col-12 ">
        <h2 class="font text-center m-2 font-weight-bold">Contas Correntes</h2>
        <hr />
        <table class="table table-dark rounded font font-we btable-hover table-secondary table-responsive-md table-responsive-sm col-md-12 table-responsive-lg">
            <thead>
                <tr>
                    <th>
                        Banco
                    </th>
                    <th>
                        Agencia
                    </th>
                    <th>
                        Filial
                    </th>
                    <th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumeroDaConta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DigitoVerificadorCC)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Saldo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Agencia.Banco.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Agencia.PessoaJuridica.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Filial.PessoaJuridica.Nome)
                        </td>
                        <td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumeroDaConta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DigitoVerificadorCC)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Saldo)
                        </td>
                        <td>
                            @if (item.Ativo == true)
                            {
                                <a asp-action="Deactivate" asp-route-id="@item.Id" class="btn btn-outline-danger rounded-pill font m-1 float-right ">Desativar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary rounded-pill font m-1 float-right">Detalhes</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success rounded-pill font m-1 float-right">Editar</a>
                            }
                            else
                            {
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary rounded-pill font m-1 float-right">Detalhes</a>

                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <p class="text-center btns">
            <a asp-action="Create" class="btn btn-primary rounded-pill text-decoration-none add"><i class="material-icons float-left ">add</i>Adicionar</a>
        </p>
    </div>
</div>