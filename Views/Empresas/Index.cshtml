@model IEnumerable<Empresa>

@{
    ViewData["Title"] = "Empresas";
}



<div class="pai-empresa">
    <div class="filho">
        <h2 class="font text-center m-2 font-weight-bold">Empresas</h2>
        <hr />
        <table class="table table-dark rounded font font-we btable-hover table-secondary table-responsive-md table-responsive-sm col-md-12 table-responsive-lg">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sigla)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ativo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sigla)
                        </td>
                        <td>
                            @{ if (item.Ativo == false)
                                {
                                    <i class="material-icons text-danger">close</i>

                                }
                                else
                                {
                                    <i class="material-icons text-center text-success">check</i>

                                }
                            }
                        </td>
                        <td>
                            @if (!item.Filiais.Any())
                            {
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger rounded-pill font m-1 float-right ">Deletar</a>

                            }
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary rounded-pill font m-1 float-right">Detalhes</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success rounded-pill font m-1 float-right">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <p class="text-center btns">
            <a asp-action="Create" class="btn btn-primary rounded-pill text-decoration-none add"><i class="material-icons float-left ">add</i>Adicionar</a>
        </p>
    </div>
</div>
