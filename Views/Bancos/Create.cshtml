@model Banco

@{
    ViewData["Title"] = "Adicionar Banco";
}


<div class="pai-banco">
    <div class=" filho">
        <div class="col-md-6 offset-3 sobrinho-banco text-white cor p-4 rounded ">
            <h4 class="font font-weight-bold m-1 text-center">Novo Banco</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label font font-weight-bold"></label>
                    <input asp-for="Nome" name="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger font font-weight-bold"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Codigo" class="control-label font font-weight-bold"></label>
                    <input asp-for="Codigo" name="Codigo" class="form-control" />
                    <span asp-validation-for="Codigo" class="text-danger"></span>
                </div>
                <div class="form-group text-center m-2">
                    <input type="submit" value="Criar" class="btn btn-outline-primary rounded-pill m-1" />
                </div>
            </form>
        </div>
        <div class="text-center m-2">
            <a asp-action="Index" class="btn btn-dark btns rounded-pill"><i class="material-icons float-left font">arrow_back</i>Voltar Para Lista</a>
        </div>
    </div>

</div>
