@model IEnumerable<Banco>

@{
    ViewData["Title"] = "Bancos";
}

<div class=" pai-banco">
    <div class=" filho">
        <h2 class="font text-center m-2 font-weight-bold">Bancos</h2>
        <table class="table table-dark rounded font font-we btable-hover table-secondary  table-responsive-md table-responsive-sm col-md-12 table-responsive-lg">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Codigo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Nome
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Codigo)
                        </td>
                        <td>
                            @*<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger rounded-pill font m-1 float-right ">Deletar</a>*@
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary rounded-pill font m-1 float-right">Detalhes</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success rounded-pill font m-1 float-right">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <p class="btnb">
            <a asp-action="Create" class="btn btn-primary btns rounded-pill text-decoration-none add"><i class="material-icons float-left ">add</i>Adicionar</a>
        </p>
    </div>
</div>