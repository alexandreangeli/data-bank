@model IEnumerable<PostoDeCaixa>

@{
    ViewData["Title"] = "Postos de Caixa";
}


<div class="pai-posto">
    <div class="filho btable-hover table-secondary col-12 ">
        <h2 class="font text-center m-2 font-weight-bold">Postos de Caixa</h2>
        <hr />
        <table class="table table-dark rounded font font-we btable-hover table-secondary table-responsive-md table-responsive-sm">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        Filial
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContaCorrente.NumeroDaConta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContaCorrente.DigitoVerificadorCC)
                    </th>
                    <th>
                        Usuário
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ativo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Filial.PessoaJuridica.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContaCorrente.NumeroDaConta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContaCorrente.DigitoVerificadorCC)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Usuario.Email)
                        </td>
                        <td>
                            @{ if (item.Ativo == false)
                                {
                                    <i class="material-icons text-danger">close</i>

                                }
                                else
                                {
                                    <i class="material-icons text-center text-success">check</i>

                                }
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary rounded-pill font m-1 float-right">Detalhes</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success rounded-pill font m-1 float-right">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <p class="text-center bt-b">
            <a asp-action="Create" class="btn btn-primary btns rounded-pill text-decoration-none add"><i class="material-icons float-left ">add</i>Adicionar</a>
        </p>
    </div>
</div>