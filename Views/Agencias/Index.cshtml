@model IEnumerable<Agencia>

@{
    ViewData["Title"] = "Agências";
}


<div class="pai-agencia">
    <div class="filho btable-hover table-secondary col-10  ">
        <h2 class="font text-center m-2 font-weight-bold">Agências</h2>
        <hr />
        <table class="table table-dark  rounded font table-hover table-secondary  table-responsive-md table-responsive-sm  table-responsive-lg">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PessoaJuridica.Nome)
                    </th>
                    <th>
                        Banco
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PessoaJuridica.CNPJ)
                    </th>
                    <th>
                        Código
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DigitoVerificador)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PessoaJuridica.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Banco.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PessoaJuridica.CNPJ)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Codigo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DigitoVerificador)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary rounded-pill font m-1 float-right">Detalhes</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success rounded-pill font m-1 float-right">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <p class="text-center  btns">
            <a asp-action="Create" class="btn btn-primary rounded-pill text-decoration-none add"><i class="material-icons float-left ">add</i>Adicionar</a>
        </p>
    </div>
</div>