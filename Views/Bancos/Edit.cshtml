@model Banco

@{
    ViewData["Title"] = "Editar Banco";
}


<div class="pai-banco">
    <div class="filho col-4  p-2">
        <h4 class="font font-weight-bolder text-center m-1">Editar Banco</h4>
        <hr />
        <div class="col-8 alert-secondary text-white cor offset-2 p-4 rounded">
            <form item-id="@Model.Id" id='form_id' asp-action="index" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div nome class="form-group">
                    <label asp-for="Nome" class="control-label font font-weight-bold"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input onclick="bancoJs.updateBanco(this)" type="submit" value="Salvar" class="btn btn-outline-primary m-1 rounded-pill" />
                </div>
            </form>
        </div>
        <div class="text-center m-2">
        <a asp-action="Index" class="btn btn-dark btns rounded-pill"><i class="material-icons float-left font">arrow_back</i>Voltar Para Lista</a>
        </div>
    </div>
</div>


@section Scripts
    {
    <script src="~/js/banco.js">

    </script>
}