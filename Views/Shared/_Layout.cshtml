<!DOCTYPE html>

<script src="~/lib/jquery/dist/jquery.js" )" type="text/javascript"></script>
<script src="~/lib/jquery/dist/jquery.min.js" )" type="text/javascript"></script>

<html class="">
<head class="font">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Databank</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/font.css" />
    <link href="~/css/smart.css" media="screen and (max-width:1000px)" rel="stylesheet" />
    <link rel="shortcut icon" href="~/images/logo/db.png" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Carter+One" rel="stylesheet">
    
</head>
<body class=" container-fluid  p-0 font " style=" background-color:rgba(225, 225, 225, 0.50);">


    <nav class="navbar navs font-weight-bolder navbar-expand-md navbar-dark" id="">
        <!-- Brand -->

        <a class="navbar-brand" asp-controller="Home" asp-action="inicio">  <img src="~/images/logo/teste.png" alt="Alternate Text" style="width:120px;padding:10px;" /></a>


        <!-- Toggler/collapsibe Button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">

                @if (User.Identity.Name != null)
                {
                    <li class="nav-item ">
                        <a class="nav-link" asp-controller="Home" asp-action="InicioLogado">Início</a>
                    </li>

                    @if (User.Identity.Name == "admin")
                    {
                        <li class="nav-item dropdown">

                            <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                Cadastros
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="Bancos" asp-action="Index">Banco</a>
                                <a class="dropdown-item" asp-controller="Empresas" asp-action="Index">Empresa</a>
                                <a class="dropdown-item" asp-controller="Pessoas" asp-action="Index">Pessoa</a>
                                <a class="dropdown-item" asp-controller="Agencias" asp-action="Index">Agência</a>
                                <a class="dropdown-item" asp-controller="ContasCorrentes" asp-action="Index">Conta Corrente</a>
                                <a class="dropdown-item" asp-controller="Filiais" asp-action="Index">Filial</a>
                                <a class="dropdown-item" asp-controller="Usuarios" asp-action="Index">Usuário</a>
                                <a class="dropdown-item" asp-controller="PostosDeCaixa" asp-action="Index">Posto de Caixa</a>
                            </div>
                        </li>
                    }

                    <li class="nav-item ">
                        <a class="nav-link" asp-controller="MovimentoBancario" asp-action="InicioLancamento">Novo Lançamento</a>
                    </li>

                    <li class="nav-item ">
                        <a class="nav-link" asp-controller="ExtratoBancario" asp-action="InicioExtrato">Gerar Extrato</a>
                    </li>

                    <li class="nav-item ">
                        <a class="nav-link" asp-controller="MovimentoBancario" asp-action="EstornoLancamento">Estornar Lançamento</a>
                    </li>
                }

                <li class=" dropdown float-right  " style="cursor:pointer;">
                    @{
                        if (User.Identity.Name == null)
                        {
                            <a class="nav-link  " asp-controller="Usuarios" asp-action="Login">Login</a>
                        }
                        else
                        {
                            <a class="nav-link  " id="navbardrop" data-toggle="dropdown"><i class="material-icons float-left m-1">person_outline</i>@User.Identity.Name</a>
                        }
                    }
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-controller="Usuarios" asp-action="Logout">Logout</a>

                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="  body-content ">
        @RenderBody()
    </div>
    <footer class=" navs text-center text-white footer">
        <P class="text-center">&copy;2019 - DC Learning</P>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js" )" type="text/javascript"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" )" type="text/javascript"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>