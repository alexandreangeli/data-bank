@model PostoDeCaixa
@{
    ViewData["Title"] = "Detalhes do Posto de Caixa";
}

<div class="pai-posto">
    <div class="filho">
        <h4 class="font font-weight-bold m-1 text-center">Detalhes do Posto De Caixa</h4>
        <hr />
        <dl class="col-6 offset-3 cor rounded ">
            <dt>
                Filial
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Filial.PessoaJuridica.Nome)
            </dd>
            <dt>
                Usuário
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Usuario.Email)
            </dd>
            <dt>
                Conta
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ContaCorrente.NumeroDaConta) @Html.DisplayFor(model => model.ContaCorrente.DigitoVerificadorCC)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.CodigoDoPosto)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CodigoDoPosto)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)

            </dd>
            <dd>

                @{ if (Model.Ativo == false)
                    {
                        <label><i class="material-icons text-danger float-left">close</i>Desativada</label>

                    }
                    else
                    {
                        <label><i class="material-icons text-center text-success float-left">check</i>Ativada</label>

                    }
                }

            </dd>
        </dl>
        <div class="text-center btns">
            <a asp-action="Index" class="btn btn-dark rounded-pill"><i class="material-icons float-left font">arrow_back</i>Voltar Para Lista</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary rounded-pill"><i class="material-icons float-left">create</i> Editar</a>
        </div>
    </div>
</div>